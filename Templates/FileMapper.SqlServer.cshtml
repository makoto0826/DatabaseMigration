// Generated @Model.Now.ToString()
@using System

@functions {
    public string AppendConvertMethodIf(string value,string? convertMethodName)
    {
        if(String.IsNullOrEmpty(convertMethodName))
        {
            return value;
        }
        else
        {
            return $"{value}.{convertMethodName}()";
        }
    }
}

namespace @Model.Migration.ProjectName
{
    public class @(Model.Migration.SourceName)FileMapper
    {
        private readonly string _filePath;

        public @(Model.Migration.SourceName)FileMapper(string filePath)
        {
            _filePath = filePath;
        }

        public void Map(System.Data.DataTable dataTable)
        {
            using var reader = new System.IO.StreamReader(_filePath,System.Text.Encoding.GetEncoding("Shift-JIS"));
            string? line = null;
            var lineCount = 1;

            while((line = reader.ReadLine()) != null)
            {
                var row = dataTable.NewRow();

                @foreach(var column in Model.Migration.Table.Columns)
                {
                    var name = column.Name.ToLower();
                    @:try
                    @:{
                        @if(column.IsGeneration)
                        {
                        @:row["@column.Name"] = @column.GenerationMethodName;
                        }
                        else
                        {
                        @:var @name = line[@column.StartPosition..@(column.EndPosition + 1)];
                        @:row["@column.Name"] = @AppendConvertMethodIf(name,column.ConvertMethodName);
                        }
                    @:}
                    @:catch(System.Exception ex)
                    @:{
                        @:System.Console.WriteLine($"{lineCount}行目 開始位置:@(column.StartPosition) 終了位置:@(column.EndPosition) 列名:@(column.Name)");
                        @:System.Console.WriteLine(ex.Message);
                        @:throw;
                    @:}
                }

                lineCount++;
                dataTable.Rows.Add(row);
            }
        }
    }
}